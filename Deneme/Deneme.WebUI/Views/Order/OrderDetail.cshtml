@model List<OrderDetailVm>
@if (Model.Count == 0)
{

    <h1 style="text-align:center;color:darkorange;margin-top:50px;"> <i style="font-size:40px;text-align:center;color:darkorange" class="fas fa-shopping-cart fa-3x"></i>Sepetinizde Ürün Bulunmuyor</h1>
    <h1 style="text-align:center;"> <a style="text-align:center;font-size:20px;margin-right:20px" asp-controller="Card" asp-action="Index" class="btn btn-success"> Hemen Alışverişe Başla</a>        </h1>

}


@if (Model.Count != 0)
{
    <h3>Sipariş Detay </h3>
    <div class="row">

        <div class="col-md-9"style="margin-right:auto">
            @foreach (var item in Model)
            {
                <div class="row mt-1" style="margin-bottom:10px;background-color:whitesmoke">


                    <div class="col-md-7" style="text-align:left">

                        <img src="~/Images/products/@item.ImagePath" width="155" height="155" />
                        <span style="font-weight:bold;font-size:23px">  @item.ProductName  <span style="font-size:15px; opacity: 0.8;"> @item.VeritansName  Adet:@item.Quantity</span>  </span>
                        
                    </div>

                    <div class="col-md-2" style="color:darkorange;margin-top:70px;font-weight:bold;text-align:center">
                        <h5>  @item.Price TL </h5>
                    </div>
                </div>
            }

        </div>

        <div class="col-md-2 d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start" style="height:200px;background-color:whitesmoke;padding:10px;">

         
                <h4 style="text-align:center;height:auto;width:100%">Sipariş Özeti</h4>
                <div style="text-align:center;height:auto;width:100%">
                    TOPLAM: @ViewBag.TotalPrice TL
                </div>
                <div style="text-align:center;height:auto;width:100%">
                    Durum: @ViewBag.Status
                </div>
                
           


        </div>
        

    </div>
}
