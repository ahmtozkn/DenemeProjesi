@model RegisterVm

@{

    Layout = null;
}

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>


        .gradient-custom {
            /* fallback for old browsers */
            background: black ;
            /* Chrome 10-25, Safari 5.1-6 */
            background: black;
            /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        }
    </style>
</head>
<body>

    <section class="vh-100 gradient-custom">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card bg-dark text-white" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">

                            <div class="mb-md-5 mt-md-4 pb-5">

                                <h2 class="fw-bold mb-2 text-uppercase">Kayıt</h2>

                                <form asp-controller="Auth" asp-action="Register">

                                    <div class="form-outline form-white mb-4">
                                        <input asp-for="Email" type="email" class="form-control form-control-lg" />
                                        <label class="form-label" for="UserName">Email</label>
                                    </div>
                                    <div class="form-outline form-white mb-4">
                                        <input asp-for="UserName"  class="form-control form-control-lg" />
                                        <label class="form-label" for="UserName">UserName</label>
                                    </div>

                                    <div class="form-outline form-white mb-4">
                                        <input asp-for="Password" type="text" class="form-control form-control-lg" />
                                        <label class="form-label" for="Password">Şifre</label>
                                    </div>

                                    <div class="form-outline form-white mb-4">
                                        <input asp-for="ConfirmPassword" type="text" class="form-control form-control-lg" />
                                        <label class="form-label" for="ConfirmPassword">ŞifreTekrar</label>
                                    </div>
                                    
                                

                                    <button class="btn btn-outline-light btn-lg px-5" type="submit">Kayıt</button>
                                </form>

                                <h2>@TempData["Message"]</h2>


                            </div>

                            <div>
                                <p class="mb-0">
                                    Zaten bir hesabın var mı? <a asp-controller="Auth" asp-action="Login" class="text-white-50 fw-bold">GirişYap</a>
                                </p>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>


</html>